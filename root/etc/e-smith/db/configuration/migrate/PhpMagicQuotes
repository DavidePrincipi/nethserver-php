{

    use version;

    open (PHP, 'php -v | grep built | cut -d " " -f 2 |');
    my $current  = <PHP> || "0.0.0";
    close PHP;

    chomp $current;
    $current = "v$current";

    my $treshold = version->new("v5.3.0");

    return unless $current >= $treshold;

    $DB->get_prop_and_delete ('php', 'MagicQuotes');

}

